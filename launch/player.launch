<launch>
  <arg name="team" default="1"/>

  <arg name="use_python" default="true"/>

  <!-- KI node controlling the robot -->
  <group ns="robot$(arg team)">
    <group unless="$(arg use_python)">
      <node pkg="player" name="player" type="player" output="screen"/>
      <node pkg="player" name="camera" type="camera" output="screen"/>
      <node pkg="player" name="laser" type="laser" output="screen"/>
    </group>

    <group if="$(arg use_python)">
      <node pkg="player" name="player" type="player.py" output="screen"/>
      <node pkg="player" name="camera" type="camera.py" output="screen"/>
      <node pkg="player" name="laser" type="laser.py" output="screen"/>
    </group>
   </group>
</launch>
